@model IEnumerable<Gallery>

@{ ViewBag.Title = "Image Galleries"; }

<a asp-action="Create" class="btn btn-primary">New Gallery</a>

<hr />

@if (Model.Any())
{
    <div>
        <table class="table table-striped table-galleries">
            <thead>
                <th>@Html.DisplayNameFor(m => m.Id)</th>
                <th>@Html.DisplayNameFor(m => m.Title)</th>
                <th>Actions</th>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id.ToString("D6")</td>
                        <td>@item.Title</td>
                        <td>
                            <a asp-controller="image" asp-action="index" asp-route-id="@item.Id" class="btn btn-success">
                                <i class="bi btn-sm bi-images" title="Images from this gallery"></i>
                            </a>
                            <a asp-action="edit" asp-route-id="@item.Id" class="btn btn-secondary">
                                <i class="bi btn-sm bi-pencil" title="Update this gallery"></i>
                            </a>
                            <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger">
                                <i class="bi btn-sm bi-trash" title="Delete this gallery"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning" role="alert">
        There's no gallery available.
    </div>
}